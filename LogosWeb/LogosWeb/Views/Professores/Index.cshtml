@{
    ViewData["Title"] = "Professores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero-->
<section class="module-cover parallax text-center" data-background="../images/espontaneo/aula-carlos-bacoccina.png" data-overlay="0.7">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Nossos Professores</h2>
                <p>Nossos professores são doutores, mestres e pastores piedosos que amam ensinar sobre Jesus Cristo</p>
            </div>
        </div>
    </div>
</section>
<!-- Hero end-->
<div ng-controller="ProfessoresPanelController as controller" ng-init="controller.init()">
    <!-- Portfolio-->
    <section class="module">
        <div class="container">
            <ul class="nav nav-tabs nav-tabs-icons nav-justified">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tab-7-1">
                        <span class="ti-layout"></span>
                        <h6>Em bloco</h6>
                    </a>
                </li>
                <li class="nav-item">
                    <a id="lista-professores" class="nav-link" data-toggle="tab" href="#tab-7-2" ng-click="controller.closeProfDetails()">
                        <span class="ti-list"></span>
                        <h6>Lista</h6>
                    </a>
                </li>
            </ul>
            <!--Em bloco-->
            <div class="tab-content">
                <div class="tab-pane show active" id="tab-7-1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="space" data-MY="40px"></div>
                        </div>
                    </div>
                    <div class="row">
                        @*<div class="col-md-12">
                            <ul class="filters serif">
                                <li><a class="current" href="#" data-filter="*">Todos</a></li>
                                <li><a href="#" data-filter=".teo-sistematica">Teologia Sistemática</a></li>
                                <li><a href="#" data-filter=".teo-biblica">Teologia Bíblica</a></li>
                                <li><a href="#" data-filter=".linguas-biblicas">Línguas Bíblicas</a></li>
                            </ul>
                        </div>*@
                    </div>
                    <div class="row row-portfolio" data-columns="4">
                        @*<div class="grid-sizer"></div>*@
                        <div class="portfolio-item teo-sistematica" ng-repeat="professor in controller.professoresOrdenados">
                            <div class="portfolio-item-wrapper">
                                <div class="portfolio-item-img" ng-show="professor.urlImagem"><img ng-src="~/images/professores/{{professor.urlImagem}}" alt="" height="100%" width="100%"></div>
                                <div class="portfolio-item-caption">
                                    <h6 class="portfolio-item-title">{{professor.nome}}</h6>
                                    @*<span class="portfolio-item-subtitle serif">{{professor.area}}</span>*@
                                </div>
                                <a class="professor-show-info portfolio-item-link" style="cursor: pointer;" ng-click="controller.showProfDetails(professor)"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Lista-->
                <div class="tab-pane" id="tab-7-2">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="space" data-MY="40px"></div>
                        </div>
                    </div>
                    <div ng-repeat="professor in controller.professoresOrdenados">
                        <div class="row">
                            <div class="col-12 col-md-4" ng-show="professor.urlImagem">
                                <img ng-src="~/images/professores/{{professor.urlImagem}}" alt="" width="100%">
                            </div>
                            <div class="col-12 col-md-8">
                                <h6 class="single-portfolio-title">{{professor.nome}}</h6>
                                <p class="text-justify">{{professor.descricao}}</p>
                                <ul class="social-icons">
                                    <li ng-repeat="rede in professor.redesSociais"><a href="{{rede.url}}"><i class="fab fa-{{rede.nome.toLowerCase()}}"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="space" data-MY="40px"></div>
                            </div>
                        </div>
                    </div>
                    @*<p class="text-center mt-5"><a class="btn btn-lg btn-circle btn-dark" href="">Ver mais</a></p>*@
                </div>
            </div>


        </div>
    </section>
    <!-- Portfolio end-->
    <!-- Professor Details -->
    <section id="professor-details" class="module bg-gray" style="display: none;">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4">
                    <img ng-src="~/images/professores/{{controller.professor.urlImagem}}" alt="" width="100%">
                </div>
                <div class="col-12 col-md-8 mt-3">
                    <h6 class="single-portfolio-title">{{controller.professor.nome}}</h6>
                    <p class="text-justify">{{controller.professor.descricao}}</p>
                    <ul class="social-icons" ng-show="controller.professor.redesSociais.length > 0">
                        <li ng-repeat="rede in controller.professor.redesSociais"><a href="{{rede.url}}"><i class="fab fa-{{rede.nome.toLowerCase()}}"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Professor Details end -->
</div>