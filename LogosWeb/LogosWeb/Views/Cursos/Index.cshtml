@{
    ViewData["Title"] = "Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero-->
<section class="module-cover parallax text-center" data-background="../images/local/sala-aula-logos-1.png" data-overlay="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Nossos Cursos</h2>
                <p>Venha estudar conosco!</p>
            </div>
        </div>
    </div>
</section>
<!-- Hero end-->
<!-- Portfolio-->
<div ng-controller="CursosPanelController as controller" ng-init="controller.init()">
    <section class="module p-t-35 p-b-0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="filters serif">
                        <li><a class="current" href="" data-filter="*">Todos</a></li>
                        <li><a href="" data-filter=".mestrado">Master</a></li>
                        <li><a href="" data-filter=".pos-graduacao">Pós-graduação</a></li>
                        <li><a href="" data-filter=".graduacao">Graduação</a></li>
                        <li><a href="" data-filter=".reconhecimento-mec">Reconhecidos pelo MEC</a></li>
                    </ul>
                </div>
            </div>
            <div class="row row-portfolio" data-columns="4">
                <div class="grid-sizer"></div>
                <div class="portfolio-item {{curso.grau == 'Graduação' ? 'graduacao' : ''}}{{curso.grau == 'Pós-graduação' ? 'pos-graduacao reconhecimento-mec' : ''}}{{curso.grau == 'Mestrado' ? 'mestrado' : ''}}" ng-repeat="curso in controller.cursos">
                    <div class="portfolio-item-wrapper">
                        <div class="portfolio-item-img"><img ng-src="images/cursos/{{curso.urlImagemPrincipal}}" alt=""></div>
                        <div class="portfolio-item-caption">
                            <h6 class="portfolio-item-title">{{curso.nome}}</h6><span class="portfolio-item-subtitle serif">{{curso.categoria}}</span>
                        </div><a class="smoothscroll curso-show-info portfolio-item-link" href="#curso-details" style="cursor: pointer;" ng-click="controller.showCursoDetails(curso)"></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="space" data-MY="60px"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- Portfolio end-->
    <!-- Curso Details -->
    <div id="curso-details" class="module bg-gray" style="display: none;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-4">
                    <img ng-src="images/cursos/{{controller.curso.urlImagemPrincipal}}" alt="">
                </div>
                <div class="col-12 col-md-8 mt-3">
                    <h6 class="single-portfolio-title">{{controller.curso.nome}}</h6>
                    <p class="text-justify">{{controller.curso.descricao}}</p>

                    <div class="info-list">
                        <li ng-show="controller.curso != null && controller.curso.duracao"><span class="info-list-title">Duração:</span><span>{{controller.curso.duracao}}</span></li>
                        <li ng-show="controller.curso != null && controller.curso.formato.length > 0"><span class="info-list-title">Formato:</span><span><a href="#">{{controller.parseFormato(controller.curso.formato)}}</a></span></li>
                        <li ng-show="controller.curso != null && controller.curso.publico"><span class="info-list-title">Público:</span><span>{{controller.curso.publico}}</span></li>
                        <li ng-show="controller.curso != null && controller.curso.categoria"><span class="info-list-title">Categoria:</span><span><a href="#">{{controller.curso.categoria}}</a></span></li>
                    </div>

                    <p class="text-center mt-5"><a class="btn btn-lg btn-circle btn-dark" href="" ng-click="controller.goToCursoDetails(controller.curso.cursoID)">Detalhes do curso</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Curso Details end -->
</div>