@{
    ViewData["Title"] = "Podcast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="PodcastPageController as controller" ng-init="controller.init()">
    <!-- Hero-->
    <section class="module-cover parallax text-center" data-background="../images/podcast/logos-podcast-background.png" data-overlay="0.20" data-gradient="0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1></h1>
                        <p></p>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero end-->
    <!-- Programas -->
    <section class="module bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-9 m-auto text-center">
                    <h3>Programas do Logos Podcast</h3>
                    <p class="lead">Conheça nossos programas</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="space" data-MY="40px"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel review-carousel">
                        <div class="review-card" ng-repeat="podcast in controller.content | limitTo: 3" ng-click="controller.showPodcastList(podcast)">
                            <div class="review-card-author">
                                <div class="review-card-author-photo"><img src="" alt=""></div>
                                <div class="review-card-author-info">
                                    <h6 class="review-card-author-title">{{podcast.nome}}</h6>
                                </div>
                            </div>
                            <div class="review-card-content">
                                <p>{{podcast.descricao}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Programas end-->
    <section id="podcast-list-section" class="module bg-white" style="display: none">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-9 m-auto text-center">
                    <h3>{{controller.podcastContent.nome}}</h3>
                    <p class="lead">{{controller.podcastContent.descricao}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="space" data-MY="40px"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Post-->
                    <article class="post">
                        <div class="post-wrapper">
                            <div class="post-header">
                                <h2 class="post-title"><a href="">Lista aqui...</a></h2>
                            </div>
                            <div class="post-content text-justify">
                                <p>
                                    
                                </p>
                            </div>
                        </div>
                    </article>
                    <!-- Post end-->
                </div>
            </div>
        </div>
    </section>
</div>


@section scriptsSection {
    <script src="~/js/podcast.min.js"></script>
}