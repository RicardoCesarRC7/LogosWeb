@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="BlogController as controller" ng-init="controller.init()">
    <!-- Hero-->
    <section class="module-cover parallax text-center" data-background="../../images/local/livros-2.png" data-overlay="0.3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{controller.postagem.titulo}}</h2>
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="/">Início</a></li>
                        <li class="breadcrumb-item"><a href="/Blog">Blog</a></li>
                        <li class="breadcrumb-item active">{{controller.postagem.titulo}}</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
