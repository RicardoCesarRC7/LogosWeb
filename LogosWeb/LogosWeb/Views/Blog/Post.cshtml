                            <div class="post-header">
                                <h1 class="post-title">{{controller.postagem.titulo}}</h1>
                                <ul class="post-meta">
                                    <li>{{controller.handleDates(controller.postagem)}}</li>
                                    <li>por {{controller.postagem.autor}}</li>
                                </ul>
                            </div>
                            <div class="post-content text-justify blog-text-paragraphs">
                                <p ng-repeat="paragrafo in controller.texto" ng-bind-html="paragrafo"></p>
                            </div>
