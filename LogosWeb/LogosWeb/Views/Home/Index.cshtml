@{
    ViewData["Title"] = "Home";
}

<!-- Hero-->
<section class="module-cover-slides fullscreen">
    <ul class="slides-container">
        <li class="parallax text-center" data-overlay="0.7">
            <img src="~/images/local/fachada-1.png" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Bem-vindo ao <br>Seminário Batista Logos</strong></h1>
                        <p><a class="btn btn-lg btn-circle btn-new-white" id="hero-sobre-nos-button" href="">Sobre nós</a></p>
                    </div>
                </div>
            </div>
        </li>
        <li class="parallax text-center" data-overlay="0.7">
            <img src="~/images/estudio/cameras_img.jpg" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Conheça o Projeto Estúdio</strong></h1>
                        <p><a class="smoothscroll btn btn-lg btn-circle btn-new-white" href="/Sobre/Estudio">Projeto Estúdio</a></p>
                    </div>
                </div>
            </div>
        </li>
        <li class="parallax text-center" data-overlay="0.7">
            <img src="~/images/local/biblioteca-1.png" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Conheça nossos cursos</strong></h1>
                        <p><a class="smoothscroll btn btn-lg btn-circle btn-new-white" href="#module-cursos">Cursos</a></p>
                    </div>
                </div>
            </div>
        </li>
        <li class="parallax text-center" data-overlay="0.7" data-gradient="0">
            <img src="~/images/espontaneo/aula-carlos-bacoccina.png" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Conheça nossos professores</strong></h1>
                        <p><a class="smoothscroll btn btn-lg btn-circle btn-new-white" href="#module-professores">Professores</a></p>
                    </div>
                </div>
            </div>
        </li>
    </ul>
    <div class="slides-navigation"><a class="prev" href="#"><span class="ti-angle-left"></span></a><a class="next" href="#"><span class="ti-angle-right"></span></a></div>
</section>
<!-- Hero end-->
<!-- Alt Services-->
<section class="module bg-white" ng-controller="ValoresPanelController as controller" ng-init="controller.init()">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 offset-lg-2 text-center text-lg-left"><img src="~/images/logo-logos.png" width="120px" alt=""></div>
            <div class="col-lg-5 text-center">
                <h2>Nossos Valores</h2>
                <p class="lead">Conheça nossos valores</p>
                <div class="space" data-MY="50px"></div>
                <!--Desktop-->
                <div class="d-none d-lg-block icon-box icon-box-left mb-4" ng-repeat="valor in controller.valores">
                    <div class="icon-box-icon"><span class="ti-{{valor.icone}}"></span></div>
                    <div class="icon-box-title">
                        <h6>{{valor.nome}}</h6>
                    </div>
                    <div class="icon-box-content">
                        <p>{{valor.descricao}}</p>
                    </div>
                </div>
                <!--Mobile-->
                <div class="d-block d-lg-none icon-box mb-4" ng-repeat="valor in controller.valores">
                    <div class="icon-box-icon"><span class="ti-{{valor.icone}}"></span></div>
                    <div class="icon-box-title">
                        <h6>{{valor.nome}}</h6>
                    </div>
                    <div class="icon-box-content">
                        <p>{{valor.descricao}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Alt Services end-->
<!-- Portfolio-->
<section id="module-cursos" class="module bg-gray" ng-controller="CursosPanelController as controller" ng-init="controller.init()" ng-show="controller.cursos.length > 0">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto text-center">
                <h1>Nossos cursos</h1>
                <p class="lead">Conheça nossos cursos</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="40px"></div>
            </div>
        </div>
        @*<div class="row">
            <div class="col-md-12">
                <ul class="filters serif">
                    <li><a class="current" href="#" data-filter="*">Todos</a></li>
                    <li><a href="#" data-filter=".mestrado">Mestrado</a></li>
                    <li><a href="#" data-filter=".pos-graduacao">Pós-graduação</a></li>
                    <li><a href="#" data-filter=".graduacao">Graduação</a></li>
                    <li><a href="#" data-filter=".reconhecimento-mec">Reconhecidos pelo MEC</a></li>
                </ul>
            </div>
        </div>*@
    </div>
    <div class="container">
        <div class="row row-portfolio" data-columns="3">
            @*<div class="grid-sizer"></div>*@
            <div class="portfolio-item {{curso.grau == 'Graduação' ? 'graduacao' : ''}}{{curso.grau == 'Pós-graduação' ? 'pos-graduacao reconhecimento-mec' : ''}}{{curso.grau == 'Mestrado' ? 'mestrado' : ''}}" ng-repeat="curso in controller.cursos">
                <div class="portfolio-item-wrapper">
                    <div class="portfolio-item-img"><img ng-src="images/cursos/{{curso.urlImagemPrincipal}}" alt=""></div>
                    <div class="portfolio-item-caption">
                        <h6 class="portfolio-item-title">{{curso.nome}}</h6><span class="portfolio-item-subtitle serif">{{curso.categoria}}</span>
                    </div><a class="portfolio-item-link" href="" ng-click="controller.goToCursoDetails(curso.cursoID)"></a>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <p class="text-center"><a class="btn btn-lg btn-circle btn-dark" href="" ng-click="controller.goToCursosPage()">Todos os cursos</a></p>
            </div>
        </div>
    </div>
</section>
<!-- Portfolio end-->
<!-- Pos-Online -->
<section class="module bg-gray p-1">
    <img src="~/images/cursos/pos-graduacao/painel-pos-online.png" width="100%" />
</section>
<!-- Pos online end-->
<!-- Team-->
<section id="module-professores" class="module" ng-controller="ProfessoresPanelController as controller" ng-init="controller.init()">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto text-center">
                <h1>Nossos professores</h1>
                <p class="lead">Nossos professores são Doutores, Mestres e Pastores piedosos que amam ensinar sobre Jesus Cristo</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="60px"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6" ng-repeat="professor in controller.professores | limitTo: 6">
                <div class="team-item">
                    <div class="team-image">
                        <img ng-src="images/professores/{{professor.urlImagem}}" alt="" width="100%">
                        <div class="team-wrap">
                            <div class="team-content">
                                <h6 class="team-name">{{professor.nome}}</h6>
                                @*<div class="team-role">{{professor.area}}</div>*@
                            </div>
                            <div class="team-content-social" ng-show="professor.redesSociais != null && professor.redesSociais.length > 0">
                                <ul>
                                    <li ng-repeat="redeSocial in professor.redesSociais"><a href="{{redeSocial.url}}"><i class="fab fa-{{redeSocial.nome.toLowerCase()}}"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="30px"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="text-center"><a class="btn btn-lg btn-circle btn-dark" href="" ng-click="controller.goToProfessoresPage()">Todos os professores</a></p>
            </div>
        </div>
    </div>
</section>
<!-- Team end-->
<!-- Testimonials-->
<section class="module parallax" data-background="images/local/sala-aula-logos-3.png" data-overlay="0.5" ng-controller="TestemunhoPanelController as controller" ng-init="controller.init()" ng-show="controller.testemunhos.length > 0">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="50px"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="review-slides owl-carousel" id="testemunho-slider">
                    <div class="review" ng-repeat="testemunho in controller.testemunhos">
                        <div class="review-icons">
                            <img src="~/images/avatar/{{testemunho.imagem}}" alt="">
                        </div>
                        <div class="review-content">
                            <blockquote>
                                <p>{{testemunho.descricao}}</p>
                                <footer class="blockquote-footer">{{testemunho.nome}}</footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="50px"></div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonials end-->
<!-- Form -->
<section class="module" id="form-interesse">
    <partial name="../Partial/_FormInteresse" />
    <div class="row">
        <div class="col-md-12">
            <div class="space" data-MY="50px"></div>
        </div>
    </div>
</section>
<!-- Form end -->
<!-- Posts-->
<section class="module bg-gray" ng-controller="BlogController as controller" ng-init="controller.init()" ng-show="controller.postagens.length > 0">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto text-center">
                <h1>Nosso conteúdo</h1>
                <p class="lead">Veja o conteúdo disponibilizado por nossos professores e alunos</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="60px"></div>
            </div>
        </div>
        <div class="row row-post-masonry">
            <div class="col-md-4 post-item" ng-repeat="post in controller.postagens">
                <!-- Post-->
                <article class="post">
                    <div class="post-preview"><a href="" ng-click="controller.goToBlogContentPage(post.postagemID)"><img src="~/images/local/{{post.imagem}}" alt=""></a></div>
                    <div class="post-wrapper">
                        <div class="post-header">
                            <h2 class="post-title"><a href="" ng-click="controller.goToBlogContentPage(post.postagemID)">{{post.titulo}}</a></h2>
                        </div>
                        <div class="post-content">
                            <p>{{post.subtitulo}}</p>
                        </div>
                    </div>
                </article>
                <!-- Post end-->
            </div>
        </div>
    </div>
</section>
<!-- Posts end-->
