    <section class="module-cover parallax text-center" data-background="../images/estudio/cameras_img.jpg" data-overlay="0.85" data-gradient="0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Projeto Estúdio</h1>
                    @*<p>Teologia que educa a mente e molda o coração!</p>*@
                </div>
            </div>
        </div>
    </section>
    <!-- Hero end-->
    <!-- About-->
    <section class="module bg-gray p-t-0">
        <div class="container">
            <div class="row">
                <div class="col-md-10 m-auto">
                    <div class="space" data-mY="-60px"></div>
